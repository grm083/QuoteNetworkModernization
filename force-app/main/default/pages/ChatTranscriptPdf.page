<apex:page controller="ChatTranscriptPdfCtrl" renderAs="PDF" > 
    <html>
        <body>
         <!--
         resList is : {!$CurrentPage.parameters.resList}
         -->
            <center><b>WM ChatNow Transcript Case {!$CurrentPage.parameters.ref}</b></center>
              <br></br>      
              <table style="border: 1px solid #ddd; border-collapse: collapse; width: 100%;">
                  <tr>
                    <th style="width:25%; padding: 4px; text-align: left; border: 1px solid #ddd; background-color:#e7e9eb!important;">Date Time</th>
                    <th style="width:20%; padding: 4px; text-align: left; border: 1px solid #ddd; background-color:#e7e9eb!important;">User Name</th>
                    <th style="padding: 4px; text-align: left; border: 1px solid #ddd; background-color:#e7e9eb!important;">Chat Message</th>
                  </tr>
                  <apex:repeat value="{!wrapperResList}" var="chat" >
                  <tr>
                    <td style="width:25%; padding: 4px; text-align: left; border: 1px solid #ddd;">{!chat.chatDateTime}</td>
                    <td style="width:20%; padding: 4px; text-align: left; border: 1px solid #ddd;">{!chat.userId}</td>
                    <td style="padding: 4px; text-align: left; border: 1px solid #ddd;">{!chat.messageText}</td>
                  </tr>
                  </apex:repeat>
            </table>   
        </body>
    </html>
    
</apex:page>