<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId" access="global">
    <aura:handler name="init" action="{!c.doInit}" value="{!this}" />
    <aura:registerEvent name="fetchServiceApprover" type="c:FetchServiceApproverEvent"/>
    <aura:handler event="c:ServiceApproverEvent" action="{!c.handleServiceApproverEvent}"/>
    <aura:attribute name="displayOccurrence" type="Boolean" default="false" access="global"/>
    <aura:attribute name="showErrorSA" type="Boolean" default="true"/>
    <aura:attribute name="isSpinner" type="Boolean" default="true"/>
    <aura:attribute name="showMessage" type="String" default="No record to display"/>
    <aura:attribute name="SAlist" type="String"/>
    <aura:attribute name="ocLimit" type="String"/>
    <!--<aura:if isTrue="{!v.isSpinner}">
        <div>
        <lightning:spinner alternativeText="Loading" size="small" />
    	</div>
    </aura:if>-->
    <div class="slds">
		<div class="slds-grid slds-wrap">
            <div class="slds-col slds-size_1-of-1" style="padding:10px"> 
                <aura:if isTrue="{!v.showErrorSA}">
                    <div class="slds-text-heading_medium slds-text-color_error slds-text-align_center slds-size_1-of-1">{!v.showMessage}
                    </div>
                    <div class="slds-p-around_x-small slds-size_1-of-1 slds-text-align_center"> 
                    <lightning:button  label="Refresh" title="Refresh" onclick="{! c.doInit }"/>
                    </div>
                </aura:if>
                
                <aura:if isTrue="{! !v.showErrorSA}">
                    <div class="slds-grid">
					<div class="slds-size_6-of-12">
                        <lightning:card class="setHeight slds-scrollable">
                            <ul class="slds-list_horizontal">
                                <li><div class="slds-m-left_small"><lightning:icon aura:id="approverIcon" iconName="action:submit_for_approval" alternativeText="Service Approver" size="xx-small"/></div></li>
                                <li><div class="slds-text-heading_medium slds-m-left_small">Service Approvers</div></li>
                            </ul>
                            <p class="slds-p-around_small slds-m-left_medium">
                                <div class="newline"><aura:unescapedHtml value="{!v.SAlist}" /></div>
                                
                            </p>
                            <!--</aura:if>-->
                        </lightning:card>
                    	</div>
                        <div class="slds-p-around_x-small slds-size_6-of-12"> 
                    	<lightning:button  label="Refresh" title="Refresh" onclick="{! c.doInit }"/>
                    	</div>
                        </div>
                    </aura:if>
                
            </div>
        </div>
    </div>
</aura:component>