<aura:component implements="force:hasRecordId,flexipage:availableForAllPageTypes" controller="AcornController">
    <lightning:overlayLibrary aura:id="overlayLib"/>
    <lightning:utilityBarAPI aura:id="utilitybar"/>
    
    <aura:attribute name="AcornComment" type="String"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <div class="slds-box">
        <lightning:inputRichText class="commentBox" value="{!v.AcornComment}" />
        <div class="slds-m-top_x-small">
            <lightning:button variant="brand" label="Save Comment" title="Save Comment" onclick="{!c.createNote}"/>         
        </div>
    </div>
</aura:component>