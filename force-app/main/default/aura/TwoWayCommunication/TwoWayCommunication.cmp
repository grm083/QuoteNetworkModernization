<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction,lightning:isUrlAddressable" access="global"> 
    <aura:attribute type="String" name="caseId" default=""/>
    <aura:attribute type="String" name="caseOrigin" default=""/>
    
   <lightning:workspaceAPI aura:id="workspace"/> 
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <!--<aura:handler name="ComponentEvent" event="c:ComponentEvent" action="{!c.refreshView}" /> -->
    
    <!-- SHOW LOADING SPINNER-->
    <lightning:spinner variant="brand" size="large" aura:id="Id_spinner" class="slds-hide" />
    
    <div class="slds-modal__content slds-var-p-around_xx-large slds-p-vertical_small slds-p-horizontal_small slds-box slds-theme_default" style="height:100%;overflow:auto;" id="modal-content-id-1">
        <lightning:tabset  class="slds-p-left_xx-large" aura:id="tabset" selectedTabId="View">
            <lightning:tab label="View Comments" id="View" onactive="{!c.createviewComments}" aura:id="viewcommentstab">
               <!-- <c:viewComments recordId="{!v.caseId}" style="height:100%" aura:id = "viewcomments_comp"/> -->
            </lightning:tab>
            
            <lightning:tab label="Add Comments" id="Add">
                <c:AddComment recordId="{!v.caseId}"/>
            </lightning:tab> 
            <!--Changes for SDT-36424, add caseOrigin parameter-->
            <lightning:tab label="Send Alert" id="Send Alert">
                <c:sendAlert recordId="{!v.caseId}" caseOrigin="{!v.caseOrigin}" oncancel="{!c.refreshView}"/>
            </lightning:tab>
            
            <!--    <lightning:tab label="Update Status" id="Update Status">
                    <c:UpdateStatus recordId="{!v.caseId}"/>
                </lightning:tab>
           
                <lightning:tab label="Update Scheduled" id="Update Scheduled">
                    <c:UpdateScheduled recordId="{!v.caseId}"/>
                </lightning:tab> -->
            
               <!--UI suggestion-->
                <lightning:tab label="Update Portal" id="Update Portal">
                    <c:updatePortal recordId="{!v.caseId}"/>
                </lightning:tab>
            
        </lightning:tabset>
    </div>
    
</aura:component>