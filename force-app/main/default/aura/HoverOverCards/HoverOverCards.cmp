<aura:component  implements="flexipage:availableForRecordHome,force:hasRecordId" access="global" controller = "HoverOverCardsCntrl">
    <aura:attribute name="objecttype" type="String" default="Asset"/>
    <aura:attribute name="CaseDetails" type="Case"/>
    <aura:attribute name="assetdetails" type="Object"/>
    <aura:attribute name="assetHeadetId" type="String"/>
    <aura:attribute name="pickUpCost" type="Boolean" default="false"/>
    <aura:attribute name="pickUpPrice" type="Boolean" default="false"/>
    <aura:attribute name="extraPickUpCost" type="Boolean" default="false"/>
    <aura:attribute name="extraPickUpPrice" type="Boolean" default="false"/>
    <aura:attribute name="haulCost" type="Boolean" default="false"/>
    <aura:attribute name="haulPrice" type="Boolean" default=""/>
    <aura:attribute name="disposalCost" type="Boolean" default="false"/>
    <aura:attribute name="disposalPrice" type="Boolean" default="false"/>
    <aura:handler name="init" action="{!c.assetdetail}" value="{!this}" />
    <aura:if isTrue="{!v.objecttype == 'Asset'}">
        <div class="slds-m-top--none slds-m-bottom--none">
            <table class="slds-box spacing">
                <thead>
                    <tr class="slds-table slds-table--bordered slds-table--striped">
                        <th colspan="5" class="heading">{!v.CaseDetails.Asset.Name}&nbsp;- {!v.CaseDetails.Asset.Material_Type__c}</th>
                    </tr>
                </thead>
                <thead>
                    <tr class="slds-table slds-table--bordered slds-table--striped">
                        <th scope="col" class="head slds-size_1-of-6"><span class="slds-truncate">SID</span></th>
                        <th scope="col" class="head slds-size_1-of-6"><span class="slds-truncate">Duration</span></th>
                        <th scope="col" class="head slds-size_1-of-6"><span class="slds-truncate">Occurrence</span></th>
                        <th scope="col" class="head slds-size_1-of-6"><span class="slds-truncate">Schedule</span></th>
                        <th scope="col" class="head slds-size_1-of-6"><span class="slds-truncate">Quantity</span></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="slds-size_1-of-5">{!v.CaseDetails.Asset.Acorn_SID__c}</td>
                        <td class="slds-size_1-of-5">{!v.CaseDetails.Asset.Duration__c}</td>
                        <td class="slds-size_1-of-5">{!v.CaseDetails.Asset.Occurrence_Type__c}</td>
                        <td class="slds-size_1-of-5">{!v.CaseDetails.Asset.Schedule__c}</td>
                        <td class="slds-size_1-of-5">{!v.assetdetails.assetQuantity}</td>
                    </tr>
                </tbody>
                <thead>
                    <tr class="slds-table slds-table--bordered slds-table--striped">
                        <th scope="col" class="head slds-size_1-of-5"><span class="slds-truncate">Vendor</span></th>
                        <th scope="col" class="head slds-size_1-of-5"><span class="slds-truncate">Vendor ID</span></th>
                        <th scope="col" class="head slds-size_1-of-5"><span class="slds-truncate">S-Code</span></th>
                        <th scope="col" class="head slds-size_1-of-5"><span class="slds-truncate">Has XPU</span></th>
                        <th scope="col" class="head slds-size_1-of-5"><span class="slds-truncate">Equip Ownership</span></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="slds-size_1-of-5">{!v.CaseDetails.Asset.Supplier__r.Name}</td>
                        <td class="slds-size_1-of-5">
                            <a data-value="{!v.CaseDetails.Asset.Supplier__c}" onclick="{!c.handleClick}">{!v.CaseDetails.Asset.Vendor_ID__c}</a> 
                        </td>
                        <td class="slds-size_1-of-5">{!v.CaseDetails.Asset.Sensitivity_Code__c}</td>
                        <td class="slds-size_1-of-5">{!v.CaseDetails.Asset.Has_Extra_Pickup__c}</td>
                        <td class="slds-size_1-of-5">{!v.CaseDetails.Asset.Equipment_Owner__c}</td>
                    </tr>
                </tbody>
                <thead>
                    <tr class="slds-table slds-table--bordered slds-table--striped">
                        <th scope="col" class="head slds-size_1-of-5"><span class="slds-truncate">Start Date</span></th>
                        <th scope="col" class="head slds-size_1-of-5"><span class="slds-truncate">Pickup</span><span class="slds-truncate red"> Price</span></th>
                        <th scope="col" class="head slds-size_1-of-5"><span class="slds-truncate">Extra Pickup</span><span class="slds-truncate red"> Price</span></th>
                        <th scope="col" class="head slds-size_1-of-5"><span class="slds-truncate">Haul</span><span class="slds-truncate red"> Price</span></th>
                        <th scope="col" class="head slds-size_1-of-5"><span class="slds-truncate">Disposal</span><span class="slds-truncate red"> Price</span></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="slds-size_1-of-5">{!v.CaseDetails.Asset.Start_Date__c}</td>
                        <aura:if isTrue="{!v.pickUpPrice}">
                            <td scope="col" class="slds-size_1-of-5"><span class="slds-truncate"><ui:outputCurrency value="{!v.assetdetails.pickUpPrice}"/></span></td>
                            <aura:set attribute="else">
                                <td scope="col" class="slds-size_1-of-5"><span class="slds-truncate">N/A</span></td>
                            </aura:set>
                        </aura:if>
                        <aura:if isTrue="{!v.extraPickUpPrice}">
                            <td scope="col" class="slds-size_1-of-5"><span class="slds-truncate"><ui:outputCurrency value="{!v.assetdetails.extraPickUpPrice}"/></span></td>
                            <aura:set attribute="else">
                                <td scope="col" class="slds-size_1-of-5"><span class="slds-truncate">N/A</span></td>
                            </aura:set>
                        </aura:if>
                        <aura:if isTrue="{!v.haulPrice}">
                            <td scope="col" class="slds-size_1-of-5"><span class="slds-truncate"><ui:outputCurrency value="{!v.assetdetails.haulPrice}"/></span></td>
                            <aura:set attribute="else">
                                <td scope="col" class="slds-size_1-of-5"><span class="slds-truncate">N/A</span></td>
                            </aura:set>
                        </aura:if>
                        <aura:if isTrue="{!v.disposalPrice}">
                            <td scope="col" class="slds-size_1-of-5"><span class="slds-truncate"><ui:outputCurrency value="{!v.assetdetails.disposalPrice}"/></span></td>
                            <aura:set attribute="else">
                                <td scope="col" class="slds-size_1-of-5"><span class="slds-truncate">N/A</span></td>
                            </aura:set>
                        </aura:if>
                    </tr>
                </tbody>
                <thead>
                    <tr class="slds-table slds-table--bordered slds-table--striped">
                        <aura:if isTrue="{!v.CaseDetails.Asset.End_Date__c != null}">
                            <th scope="col" class="head slds-size_1-of-5"><span class="slds-truncate red">End Date</span></th>
                            <aura:set attribute="else">
                                <th scope="col" class="head slds-size_1-of-5"><span class="slds-truncate">End Date</span></th>
                            </aura:set>
                        </aura:if>
                        <th scope="col" class="slds-size_1-of-5"><span class="slds-truncate">Pickup Cost</span></th>
                        <th scope="col" class="slds-size_1-of-5"><span class="slds-truncate">Extra Pickup Cost</span></th>
                        <th scope="col" class="slds-size_1-of-5"><span class="slds-truncate">Haul Cost</span></th>
                        <th scope="col" class="slds-size_1-of-5"><span class="slds-truncate">Disposal Cost</span></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <aura:if isTrue="{!v.CaseDetails.Asset.End_Date__c != null}">
                            <td scope="col" class="slds-size_1-of-5"><span class="slds-truncate highlight">{!v.CaseDetails.Asset.End_Date__c}</span></td>
                            <aura:set attribute="else">
                                <td scope="col" class="slds-size_1-of-5"><span class="slds-truncate">{!v.CaseDetails.Asset.End_Date__c}</span></td>
                            </aura:set>
                        </aura:if>
                        <aura:if isTrue="{!v.pickUpCost}">
                            <td scope="col" class="slds-size_1-of-5"><span class="slds-truncate"><ui:outputCurrency value="{!v.assetdetails.pickUpCost}"/></span></td>
                            <aura:set attribute="else">
                                <td scope="col" class="slds-size_1-of-5"><span class="slds-truncate">N/A</span></td>
                            </aura:set>
                        </aura:if>
                        <aura:if isTrue="{!v.extraPickUpCost}">
                            <td scope="col" class="slds-size_1-of-5"><span class="slds-truncate"><ui:outputCurrency value="{!v.assetdetails.extraPickUpCost}"/></span></td>
                            <aura:set attribute="else">
                                <td scope="col" class="slds-size_1-of-5"><span class="slds-truncate">N/A</span></td>
                            </aura:set>
                        </aura:if>
                        <aura:if isTrue="{!v.haulCost}">
                            <td scope="col" class="slds-size_1-of-5"><span class="slds-truncate"><ui:outputCurrency value="{!v.assetdetails.haulCost}"/></span></td>
                            <aura:set attribute="else">
                                <td scope="col" class="slds-size_1-of-5"><span class="slds-truncate">N/A</span></td>
                            </aura:set>
                        </aura:if>
                        <aura:if isTrue="{!v.disposalCost}">
                            <td scope="col" class="slds-size_1-of-5"><span class="slds-truncate"><ui:outputCurrency value="{!v.assetdetails.disposalCost}"/></span></td>
                            <aura:set attribute="else">
                                <td scope="col" class="slds-size_1-of-5"><span class="slds-truncate">N/A</span></td>
                            </aura:set>
                        </aura:if>
                    </tr>
                </tbody>
                <thead>
                    <tr class="slds-table slds-table--bordered slds-table--striped">
                        <th colspan="3" scope="col" class="head slds-size_1-of-5"><span class="slds-truncate">Container Position</span></th>
                        <th colspan="2" scope="col" class="head slds-size_1-of-5"><span class="slds-truncate">Category</span></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="3">{!v.CaseDetails.Asset.Container_Position__c}</td> 
                        <td colspan="2">{!v.CaseDetails.Asset.Category__c}</td>
                    </tr>
                </tbody>
                <thead>
                    <tr class="slds-table slds-table--bordered slds-table--striped">
                        <th scope="col" class="head slds-size_1-of-5"><span class="slds-truncate">Vendor Account #</span></th>
                        <th scope="col" class="head slds-size_1-of-5"><span class="slds-truncate">MAS Unique #</span></th>
                        <th scope="col" class="head slds-size_1-of-5"><span class="slds-truncate">Company/Account</span></th>
                        <th scope="col" class="head slds-size_1-of-5"><span class="slds-truncate">MAS Library</span></th>
                        <th scope="col" class="head slds-size_1-of-5"><span class="slds-truncate">Project Name</span></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="slds-size_1-of-5"><span class="slds-truncate">{!v.CaseDetails.Asset.Vendor_Account_Number__c}</span></td>
                        <td class="slds-size_1-of-5">{!v.CaseDetails.Asset.MAS_Customer_Unique_Id__c}</td>
                        <td class="slds-size_1-of-5">{!v.CaseDetails.Asset.MAS_Company_Account_Number__c}</td>
                        <td class="slds-size_1-of-5">{!v.CaseDetails.Asset.MAS_Library__c}</td>
                        <td class="slds-size_1-of-5">{!v.CaseDetails.Asset.Project_Code__r.ProjectCode_Id__c}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </aura:if>
    <aura:if isTrue="{!v.objecttype == 'Location'}">
        <div class="slds-m-top--none slds-m-bottom--none"> 
            <table class="slds-box spacing">
                <thead>
                    <tr class="slds-table slds-table--bordered slds-table--striped">
                        <th colspan = "2" class="Location"><span>{!v.CaseDetails.Client__r.Name}</span></th>
                        <th class="Location"><span>{!v.CaseDetails.Location__r.Location_Code__c}</span></th>
                    </tr>
                </thead>
                <thead>
                    <tr class="slds-table slds-table--bordered slds-table--striped">
                        <th scope="col" class="head slds-size_1-of-3"><span class="slds-truncate">Address</span></th>
                        <th scope="col" class="head slds-size_1-of-3"><span class="slds-truncate">Phone</span></th>
                        <th scope="col" class="head slds-size_1-of-3"><span class="slds-truncate">Segment</span></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="slds-size_1-of-3 locationleft">{!v.CaseDetails.Location__r.ShippingStreet}</td>
                        <td class="slds-size_1-of-3"><lightning:formattedPhone value="{!v.CaseDetails.Location__r.Phone}"></lightning:formattedPhone></td>
                        <td class="slds-size_1-of-3">{!v.CaseDetails.Location__r.Primary_Segment__c}</td>
                    </tr>
                </tbody>
                <thead>
                    <tr class="slds-table slds-table--bordered slds-table--striped">
                        <td scope="col" class="head slds-size_1-of-3 locationleft"><span class="slds-truncate">{!v.CaseDetails.Location__r.ShippingCity}, {!v.CaseDetails.Location__r.ShippingState}&nbsp;{!v.CaseDetails.Location__r.ShippingPostalCode}</span></td>
                        <th scope="col" class="head slds-size_1-of-3"><span class="slds-truncate">Local Time</span></th>
                        <th scope="col" class="head slds-size_1-of-3"><span class="slds-truncate">Location Customer Name</span></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="slds-size_1-of-3 locationleft">{!v.CaseDetails.Location__r.ShippingCountry}</td>
                        <td class="slds-size_1-of-3">{!v.CaseDetails.Location__r.tz__Local_Time_Short__c}</td>
                        <td class="slds-size_1-of-3">{!v.CaseDetails.Location__r.Customer_Location_Code__c}</td>
                    </tr>
                </tbody>
                 <thead>
                     <tr class="slds-table slds-table--bordered slds-table--striped">
                         <th scope="col" class="head slds-size_1-of-3"><span class="slds-truncate">Is Portal Customer</span></th>
                        <th scope="col" class="head slds-size_1-of-3"><span class="slds-truncate">Portal Name</span></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="slds-size_1-of-3">{!v.CaseDetails.Location__r.Is_Portal_Customer__c}</td>
                        <td class="slds-size_1-of-3">{!v.CaseDetails.Location__r.Portal_Name__c}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </aura:if>
    <aura:if isTrue="{!v.objecttype == 'Contact'}">
        <div> 
            <table class="slds-box spacing">
                <thead>
                    <tr class="slds-table slds-table--bordered slds-table--striped">
                        <th colspan="2" class="heading">Contact</th>
                    </tr>
                </thead>
                <thead>
                    <tr class="slds-table slds-table--bordered slds-table--striped">
                        <th scope="col" class="head slds-size_1-of-2"><span class="slds-truncate">Name</span></th>
                        <th scope="col" class="head slds-size_1-of-2"><span class="slds-truncate">Title</span></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="slds-size_1-of-2"><span class="slds-truncate textWrapCls">{!v.CaseDetails.Contact.Name}</span></td>
                        <td class="slds-size_1-of-2"><span class="slds-truncate">{!v.CaseDetails.Contact_Title__c}</span></td>
                    </tr>
                </tbody>
                <thead>
                    <tr class="slds-table slds-table--bordered slds-table--striped">
                        <th scope="col" class="head slds-size_1-of-2"><span class="slds-truncate">Phone</span></th>
                        <th scope="col" class="head slds-size_1-of-2"><span class="slds-truncate">Preferred Method</span></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <aura:if isTrue="{!v.CaseDetails.Contact.Preferred_Method__c == 'MobilePhone'}">
                            <td class="slds-size_1-of-2"><span class="slds-truncate">{!v.CaseDetails.Contact.MobilePhone}</span></td>
                            <aura:set attribute="else">
                                <aura:if isTrue="{!v.CaseDetails.Contact.Preferred_Method__c == 'Phone'}">
                                    <td class="slds-size_1-of-2"><span class="slds-truncate">{!v.CaseDetails.Contact.Phone}</span></td>
                                    <aura:set attribute="else">
                                        <td class="slds-size_1-of-2"></td>
                                    </aura:set>
                                </aura:if>
                            </aura:set>
                        </aura:if>
                        <td class="slds-size_1-of-2">{!v.CaseDetails.Contact.Preferred_Method__c}</td>
                    </tr>
                </tbody>
                <thead>
                    <tr class="slds-table slds-table--bordered slds-table--striped">
                        <th colspan = "2" scope="col" class="head slds-size_1-of-2"><span class="slds-truncate">Email</span></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan = "2" class="slds-size_1-of-2">{!v.CaseDetails.Contact.Email}</td>
                    </tr>
                </tbody>
				<thead>
                    <tr class="slds-table slds-table--bordered slds-table--striped">
                        <th scope="col" class="head slds-size_1-of-2"><span class="slds-truncate">Email Validated</span></th>
                   		<th scope="col" class="head slds-size_1-of-2"><ui:outputCheckbox class="slds-truncate" aura:id="output" value="{!v.CaseDetails.Contact.Email_Validated__c}"/></th>
                   
                    </tr>
                </thead>
            </table>
        </div>
    </aura:if>
</aura:component>