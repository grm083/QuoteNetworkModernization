<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CannotActivate_EndDatePast</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISCHANGED(Active__c), Active__c=true, End_Date__c &lt;= TODAY())</errorConditionFormula>
    <errorDisplayField>End_Date__c</errorDisplayField>
    <errorMessage>You cannot activate a Business Rule with the End Date in the past.</errorMessage>
</ValidationRule>
