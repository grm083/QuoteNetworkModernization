<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ShouldNotChangeDetails</fullName>
    <active>false</active>
    <errorConditionFormula>AND(RecordType.DeveloperName= &apos;Approvals&apos;, OR(AND(ISCHANGED(Approver_Name__c),NOT(ISBLANK(PRIORVALUE(Approver_Name__c)))),AND(NOT(ISBLANK(PRIORVALUE(WhoId))),ISCHANGED(WhoId)), 
AND(NOT(ISBLANK(PRIORVALUE(ContactEmail__c))),ISCHANGED(ContactEmail__c)), 
AND(NOT(ISBLANK(PRIORVALUE(Contact_Title__c))),ISCHANGED(Contact_Title__c)), 
AND(NOT(ISBLANK(PRIORVALUE(Department_Name__c))),ISCHANGED(Department_Name__c))))</errorConditionFormula>
    <errorMessage>Approver Details cannot be modified</errorMessage>
</ValidationRule>
