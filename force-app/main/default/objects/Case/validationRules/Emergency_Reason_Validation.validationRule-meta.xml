<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Emergency_Reason_Validation</fullName>
    <active>true</active>
    <description>This validation is triggered when Emergency is checked and if the reason for the emergency is not being provided.</description>
    <errorConditionFormula>AND(
Emergency__c = TRUE,
ISBLANK(TEXT(Emergency_Reason__c)),
NOT($User.Bypass_Validation__c)
)</errorConditionFormula>
    <errorDisplayField>Emergency_Reason__c</errorDisplayField>
    <errorMessage>Please Provide Emergency Reason</errorMessage>
</ValidationRule>
