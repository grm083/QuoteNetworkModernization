<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PortalName_Req_When_CustomerChk</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    Is_Portal_Customer__c = TRUE,
    ISBLANK(TEXT( Portal_Name__c ))
)</errorConditionFormula>
    <errorDisplayField>Portal_Name__c</errorDisplayField>
    <errorMessage>Portal Name field is required when the Is Portal Customer is checked</errorMessage>
</ValidationRule>
