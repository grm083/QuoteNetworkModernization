<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>DoNotReply</fullName>
    <active>true</active>
    <description>Do Not Reply email cannot be selected as From Address.</description>
    <errorConditionFormula>AND(CONTAINS(FromAddress,  $Label.DoNotReplyFromEmail ),  $Profile.Name    &lt;&gt;   $Label.DoNotReplyProfile )</errorConditionFormula>
    <errorDisplayField>FromAddress</errorDisplayField>
    <errorMessage>Do Not Reply email cannot be selected as From Address.</errorMessage>
</ValidationRule>
