<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Reason_Code_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(ISNEW()),
NOT($User.Bypass_Validation__c), 
ISPICKVAL(Reason_Code__c, &apos;OTHR&apos;),  ISBLANK(Reason_Description__c))</errorConditionFormula>
    <errorMessage>Reason Description is mandatory when you select Reason Code as Other</errorMessage>
</ValidationRule>
