<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Quantity_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT($User.Bypass_Validation__c),ISCHANGED(Quantity__c), 
NOT(ISPICKVAL(WorkOrder.Status, &apos;Pending/Draft&apos;)), NOT(ISPICKVAL(WorkOrder.Status, &apos;Issued&apos;)))</errorConditionFormula>
    <errorMessage>You can update quantity only when WO is in Pending/Draft or Issued</errorMessage>
</ValidationRule>
