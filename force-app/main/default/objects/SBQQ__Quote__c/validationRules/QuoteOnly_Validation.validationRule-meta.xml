<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>QuoteOnly_Validation</fullName>
    <active>false</active>
    <description>Status not valid for Quote with Quote Only true.</description>
    <errorConditionFormula>AND(Quote_Only__c,  
OR(ISPICKVAL(SBQQ__Status__c,&apos;Price Configured&apos;), 
ISPICKVAL(SBQQ__Status__c,&apos;Declined&apos;),ISPICKVAL(SBQQ__Status__c,&apos;Approved&apos;)))</errorConditionFormula>
    <errorMessage>Status not valid for Quote with Quote Only true.</errorMessage>
</ValidationRule>
