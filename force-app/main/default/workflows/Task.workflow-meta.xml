<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Email_to_ContactEmail_of_Notify_Customer_of_Delay_Task</fullName>
        <description>Email to ContactEmail of Notify Customer of Delay Task</description>
        <protected>false</protected>
        <recipients>
            <field>Contact_Email__c</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Case_Email_Templates/Notify_Customer_of_Service_Date_Delay</template>
    </alerts>
    <fieldUpdates>
        <fullName>Attempt_Field_Update</fullName>
        <description>Updates the attempts field if the process is Notify Customer Of Service Update</description>
        <field>Attempt__c</field>
        <formula>2</formula>
        <name>Attempt Field Update</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Update Attempt for Notify Customer Of Service Update task</fullName>
        <actions>
            <name>Attempt_Field_Update</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Task.Process__c</field>
            <operation>equals</operation>
            <value>Notify Customer Of Service Update</value>
        </criteriaItems>
        <criteriaItems>
            <field>Task.Attempt__c</field>
            <operation>equals</operation>
            <value>1</value>
        </criteriaItems>
        <description>This workflow is to update attempt from 1 to 2 if the task process is Notify Customer Of Service Update</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
