<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>Populate_Acorn_SUser_ID_c</fullName>
        <field>Acorn_SUser_ID__c</field>
        <formula>$User.Acorn_SUser_ID__c</formula>
        <name>Populate Acorn_SUser_ID__c</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <outboundMessages>
        <fullName>Task_Values_to_Acorn</fullName>
        <apiVersion>45.0</apiVersion>
        <description>Sends the values of the completed task details to Acorn</description>
        <endpointUrl>https://qa.sf.wmsbs.wm.com/SalesforceOutboundMessage/Services/CaseCommentService.svc</endpointUrl>
        <fields>Acorn_SUser_ID__c</fields>
        <fields>Acorn_Tracking_Number__c</fields>
        <fields>Case_Number__c</fields>
        <fields>Case__c</fields>
        <fields>Comment__c</fields>
        <fields>Communication_Log_Type_Name__c</fields>
        <fields>Id</fields>
        <fields>Type__c</fields>
        <includeSessionId>true</includeSessionId>
        <integrationUser>api.user@wm.com</integrationUser>
        <name>Task Values to Acorn</name>
        <protected>false</protected>
        <useDeadLetterQueue>true</useDeadLetterQueue>
    </outboundMessages>
    <rules>
        <fullName>Populate Acorn_SUser_ID%5F%5Fc</fullName>
        <actions>
            <name>Populate_Acorn_SUser_ID_c</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>ISNULL(Acorn_SUser_ID__c)</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Task Values to Acorn Invocation Rule</fullName>
        <actions>
            <name>Task_Values_to_Acorn</name>
            <type>OutboundMessage</type>
        </actions>
        <active>true</active>
        <description>This rule triggers the outbound message to Acorn</description>
        <formula> 	OR( 	AND( 		ISNEW(), 		Acorn_Tracking_Number__c !=null, 		NOT( $User.Bypass_Validation__c) 	), 	AND( 		Acorn_Tracking_Number__c !=null, 		ISCHANGED(Acorn_Tracking_Number__c), 		NOT( $User.Bypass_Validation__c ) 	) 	)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
