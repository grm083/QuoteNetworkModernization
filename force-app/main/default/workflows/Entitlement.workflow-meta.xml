<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Entitlement_Approval</fullName>
        <description>Entitlement Approval</description>
        <protected>false</protected>
        <recipients>
            <type>creator</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Approve_Entitlement</template>
    </alerts>
    <alerts>
        <fullName>Reject_Approval</fullName>
        <description>Reject Approval</description>
        <protected>false</protected>
        <recipients>
            <type>creator</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Reject_Entitlement</template>
    </alerts>
    <fieldUpdates>
        <fullName>Update_Name</fullName>
        <description>Update Entitlement Name when create and Edited.</description>
        <field>Name</field>
        <formula>Account.AccountNumber  + IF(ISPICKVAL( Service__c , &apos;Empty and Return&apos;),&apos;-ER&apos;,IF(ISPICKVAL( Service__c , &apos;Empty and Do NOT Return&apos;),&apos;-ENR&apos;,IF(ISPICKVAL( Service__c , &apos;Extra Pickup&apos;),&apos;-XPU&apos;,&apos;&apos;))) + IF(ISPICKVAL( Service_Guarantee_Category__c, &apos;Days&apos;),IF(ISPICKVAL( Service_Guarantee_Category_Value__c, &apos;0&apos;),&apos;-Same&apos;,(IF(ISPICKVAL( Service_Guarantee_Category_Value__c, &apos;1&apos;),&apos;-Next Day&apos;,&apos;-&apos;+TEXT(Service_Guarantee_Category_Value__c)+&apos;D&apos;))),&apos;-&apos; +TEXT(Service_Guarantee_Category_Value__c)+&apos;H&apos;)+ &apos;-&apos; +  Count__c</formula>
        <name>Update Name</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Update Entitlement Name</fullName>
        <actions>
            <name>Update_Name</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Entitlement.RecordTypeId</field>
            <operation>equals</operation>
            <value>SLA</value>
        </criteriaItems>
        <description>Standard Name Condition</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
